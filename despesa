from datetime import date

class Despesa:
    def __init__(self, compra, tipo, data):
        self.compra = compra
        self.tipo = tipo
        self.data = date.strptime(data, "%Y-%m-%d")
        self._total_despesas = 0.0 
        self._despesas = []
        
    @property
    def total_despesas(self):
       return self._total_despesas
        
   
    def adicionar_despesa(self, despesa):
        self._despesas.append(despesa)
        self._total_despesas += despesa.valor
